@using AspNetCoreApp.Web.Controllers;
@{
    ViewData["Title"] = "Index";
    var alert = "bu bir uyarı mesajıdır.";
}
@model List<User>;

<h1>Users</h1>

@{
    var name = ViewBag.name;
    <p>@name</p>
    <p></p>
}

<p>@name</p>

<p>@ViewBag.name</p>

<p> Yaş: @ViewData["age"]</p>

<h1>İsimler</h1>
@foreach (var item in ViewData["names"] as List<string>)
{
    <p>@item</p>
}

<p> @ViewBag.person.Id - @ViewBag.person.Name - @ViewBag.person.Age</p>

<h1>Kullanıcılar</h1>
@foreach (var item in Model)
{
    <p>@item.ID - @item.Name</p>
}

<div> Günün tarihi: @DateTime.Now.ToShortDateString()</div>

@{
    var dateTime = DateTime.Now.ToShortDateString();
    var message = "merhaba";

    @: bugünün tarihi: @dateTime

    <div>mesaj: @message</div>

    <text> Bugünün tarihi: @dateTime</text>
}

@if (1 != 1)
{
    <p>doğru</p>
}
else if (DateTime.IsLeapYear(DateTime.Now.Year))
{
    <p>artık yıl</p>
}
else
{
    <h1>@alert</h1>
    <p>yanlış</p>
}

@for (var i = 0; i < 10; i++)
{
    <p>@i</p>
}

@foreach (var item in Enumerable.Range(1, 10).ToList())
{
